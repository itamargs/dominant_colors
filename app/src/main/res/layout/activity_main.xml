<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/iv_color1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:tint="#000000"
                    app:srcCompat="?attr/colorAccent" />

                <TextView
                    android:id="@+id/population1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="XX%" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color shade1" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight=".2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/iv_color2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:tint="#000000"
                    app:srcCompat="?attr/colorAccent" />

                <TextView
                    android:id="@+id/population2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="XX%" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color shade2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/iv_color3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:tint="#000000"
                    app:srcCompat="?attr/colorAccent" />

                <TextView
                    android:id="@+id/population3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="XX%" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_color3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color shade3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/iv_color4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:tint="#000000"
                    app:srcCompat="?attr/colorAccent" />

                <TextView
                    android:id="@+id/population4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="XX%" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_color4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color shade4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/iv_color5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:tint="#000000"
                    app:srcCompat="?attr/colorAccent" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/population5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX%" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_color5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color shade5" />
        </LinearLayout>

    </LinearLayout>

    <com.goldi.dominantcolors.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="53dp" />

</androidx.constraintlayout.widget.ConstraintLayout>